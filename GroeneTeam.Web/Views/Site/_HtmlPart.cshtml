@model HtmlPart

@{
    var contentPartTaal = (ContentPartTaal)ViewData["contentPartTaal"];
    var contentPagina = (ContentPagina)ViewData["ContentPagina"];
    var mode = (Mode)ViewData["Mode"];
}

@switch (mode) {
    case Mode.Bewerk:
        @Html.HtmlBewerkPartial(contentPartTaal, Model)
        break;
    case Mode.Web:
        @Html.HtmlBekijkPartial(Model, contentPagina)
        break;
    case Mode.Mail:
        @Html.HtmlBekijkPartial(Model, contentPagina)
        break;
    case Mode.MailVerstuur:
        @Html.HtmlBekijkPartial(Model, contentPagina)
        break;
}