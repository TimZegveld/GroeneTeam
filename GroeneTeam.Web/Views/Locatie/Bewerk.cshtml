@model Locatie
@{
    ViewBag.Title = "Locatie bewerken";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Bewerk", "Locatie", new { id = Model.ID }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="control-label col-sm-2" for="txtNaam">Naam</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtNaam" name="txtNaam" placeholder="Naam" value="@Model.Naam">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="txtAdres">Adres</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtAdres" name="txtAdres" placeholder="Adres" value="@Model.Adres">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="txtPostcode">Postcode</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtPostcode" name="txtPostcode" placeholder="Postcode" value="@Model.Postcode">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="txtPlaats">Plaats</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtPlaats" name="txtPlaats" placeholder="Plaats" value="@Model.Plaats">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">@Html.BootstrapIcon("floppy-disk") Opslaan</button>
        </div>
    </div>
}